{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "gcc -g -o main.out main.c $(pkg-config --cflags --libs allegro-5 allegro_primitives-5 allegro_font-5)"
